<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>YourBoard - <%= pageTitle %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <button class="mobile-menu-btn" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
  </button>

  <div class="app-container">
    <aside class="sidebar" id="sidebar">
      <div class="logo">
        <h1>YourBoard</h1>
      </div>
      <nav class="main-nav">
        <ul>
          <li><a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-tachometer-alt"></i> Dashboard
          </a></li>
          <li><a href="/tarefas" class="<%= currentPage === 'tarefas' ? 'active' : '' %>">
            <i class="fas fa-tasks"></i> Tarefas
          </a></li>
          <li><a href="/agenda" class="<%= currentPage === 'agenda' ? 'active' : '' %>">
            <i class="fas fa-calendar-alt"></i> Agenda
          </a></li>
          <li><a href="/graficos" class="<%= currentPage === 'graficos' ? 'active' : '' %>">
            <i class="fas fa-chart-bar"></i> Gráficos
          </a></li>
          <li><a href="/diario" class="<%= currentPage === 'diario' ? 'active' : '' %>">
            <i class="fas fa-book"></i> Diário
          </a></li>
          <li><a href="/atalhos" class="<%= currentPage === 'atalhos' ? 'active' : '' %>">
            <i class="fas fa-link"></i> Atalhos
          </a></li>
        </ul>
      </nav>
    </aside>

    <main class="main-content">
      <header class="page-header">
        <h2><%= pageTitle %></h2>
      </header>

      <div class="content">
        <div class="dashboard-grid">
          <!-- Widget de Tarefas Próximas -->
          <div class="card">
            <h3 class="card-title">
              <i class="fas fa-clock text-warning"></i> Tarefas Próximas
            </h3>
            <div class="task-list" id="proximas-tarefas">
              <p class="loading">Carregando tarefas...</p>
            </div>
          </div>

          <!-- Widget de Produtividade -->
          <div class="card">
            <h3 class="card-title">
              <i class="fas fa-chart-line text-success"></i> Produtividade da Semana
            </h3>
            <div class="chart-container">
              <canvas id="produtividadeChart"></canvas>
            </div>
          </div>

          <!-- Widget de Diário -->
          <div class="card">
            <h3 class="card-title">
              <i class="fas fa-edit text-info"></i> Diário Rápido
            </h3>
            <textarea id="diario-rapido" class="form-control" placeholder="Como foi seu dia hoje?" rows="3"></textarea>
            <button id="salvar-diario" class="btn btn-primary mt-3">
              <i class="fas fa-save"></i> Salvar
            </button>
          </div>

          <!-- Widget de Atalhos -->
          <div class="card">
            <h3 class="card-title">
              <i class="fas fa-star text-secondary"></i> Atalhos Favoritos
            </h3>
            <div class="shortcuts-list" id="lista-atalhos">
              <p class="loading">Carregando atalhos...</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/common.js"></script>
  <% if (typeof pageScript !== 'undefined') { %>
    <script src="/js/<%= pageScript %>.js"></script>
  <% } %>
</body>
</html>
